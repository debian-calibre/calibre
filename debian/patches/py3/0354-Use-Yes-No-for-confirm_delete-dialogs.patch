@@ -40,9 +40,10 @@ class Dialog(QDialog):
         a.stateChanged.connect(self.toggle)
         l.addWidget(a)
 
-        buttons = QDialogButtonBox.Ok
         if show_cancel_button:
-            buttons |= QDialogButtonBox.Cancel
